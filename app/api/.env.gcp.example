# ==========================================
# GCP Production Env Template (API)
# File: app/api/.env
# ==========================================

NODE_ENV=production
PORT=4000
HOST=127.0.0.1

# Cloud SQL PostgreSQL connection string.
# Option A: private IP (recommended when API runs on same VPC)
# DATABASE_URL=postgresql://DB_USER:DB_PASSWORD@10.0.0.3:5432/ascortbali
#
# Option B: Cloud SQL Auth Proxy / Unix socket style
# DATABASE_URL=postgresql://DB_USER:DB_PASSWORD@localhost:5432/ascortbali
DATABASE_URL=postgresql://REPLACE_DB_USER:REPLACE_DB_PASSWORD@REPLACE_CLOUDSQL_PRIVATE_IP:5432/ascortbali

# JWT / auth
JWT_ISSUER=ascortbali
JWT_AUDIENCE=ascortbali-web
JWT_ACCESS_TTL_SECONDS=900
JWT_REFRESH_TTL_SECONDS=2592000
JWT_PRIVATE_KEY_PEM="-----BEGIN PRIVATE KEY-----\nREPLACE_WITH_PRODUCTION_PRIVATE_KEY\n-----END PRIVATE KEY-----"
JWT_PUBLIC_KEY_PEM="-----BEGIN PUBLIC KEY-----\nREPLACE_WITH_PRODUCTION_PUBLIC_KEY\n-----END PUBLIC KEY-----"

# Analytics hashing secret (long random value from Secret Manager)
ANALYTICS_HMAC_SECRET=REPLACE_WITH_LONG_RANDOM_SECRET

# CORS origin must match public web URL
CORS_ORIGIN=https://REPLACE_WEB_DOMAIN

# Optional: keep for operational clarity
GCP_PROJECT_ID=REPLACE_PROJECT_ID
GCP_REGION=asia-southeast2
GCP_ZONE=asia-southeast2-b
GCP_INSTANCE_NAME=gda-s01
